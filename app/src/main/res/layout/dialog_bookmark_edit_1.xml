<?xml version="1.0" encoding="utf-8"?><!-- Root layout for the custom bookmark update dialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- Card container for rounded corners and elevation -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<!-- Main vertical container -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Optional dialog title section (currently hidden) -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_cardview_title_bg"
				android:orientation="vertical"
				android:visibility="visible">

				<TextView
					android:id="@+id/txt_dialog_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_10"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_update_bookmark_info"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					android:textFontWeight="600" />
			</LinearLayout>

			<!-- Scrollable content area for message + input fields -->
			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_8"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_0"
				android:layout_weight="1">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<!-- Message text displayed at the top -->
					<TextView
						android:id="@+id/txt_dialog_message"
						style="@style/style_dialog.message"
						android:layout_marginStart="@dimen/_10"
						android:layout_marginTop="@dimen/_8"
						android:layout_marginEnd="@dimen/_10"
						android:layout_marginBottom="@dimen/_8"
						android:autoLink="web"
						android:text="@string/text_bookmark_update_msg"
						android:textSize="@dimen/message_text_size" />

					<!-- Divider line -->
					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/_2"
						android:layout_marginStart="@dimen/_10"
						android:layout_marginEnd="@dimen/_10"
						android:layout_marginBottom="@dimen/_5"
						android:background="@color/transparent_dark" />

					<!-- Container for editing bookmark title -->
					<LinearLayout
						android:id="@+id/container_edit_field_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_0"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginEnd="@dimen/_0"
						android:layout_marginBottom="@dimen/_5"
						android:background="@drawable/rounded_surface_color"
						android:orientation="vertical">

						<EditText
							android:id="@+id/edit_field_name"
							style="@style/style_dialog.message"
							android:layout_margin="@dimen/_8"
							android:background="@color/transparent"
							android:drawableStart="@drawable/ic_button_browser_favicon"
							android:drawablePadding="@dimen/_5"
							android:drawableTint="@color/color_secondary"
							android:gravity="center_vertical"
							android:hint="@string/text_enter_updated_bookmark_title"
							android:importantForAutofill="no"
							android:inputType="textUri"
							android:maxLines="1"
							android:singleLine="true"
							android:textColor="@color/color_on_surface"
							android:textColorHint="@color/color_text_hint"
							android:textSize="@dimen/normal_text_size"
							android:textStyle="normal"
							tools:ignore="TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />
					</LinearLayout>

					<!-- Container for editing bookmark URL -->
					<LinearLayout
						android:id="@+id/container_edit_field_url"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_0"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginEnd="@dimen/_0"
						android:layout_marginBottom="@dimen/_5"
						android:background="@drawable/rounded_surface_color"
						android:orientation="vertical">

						<EditText
							android:id="@+id/edit_field_url"
							style="@style/style_dialog.message"
							android:layout_margin="@dimen/_8"
							android:background="@color/transparent"
							android:drawableStart="@drawable/ic_button_edit_text"
							android:drawablePadding="@dimen/_5"
							android:drawableTint="@color/color_secondary"
							android:gravity="center_vertical"
							android:hint="@string/text_enter_updated_bookmark_url"
							android:importantForAutofill="no"
							android:inputType="textUri"
							android:maxLines="1"
							android:singleLine="true"
							android:textColor="@color/color_on_surface"
							android:textColorHint="@color/color_text_hint"
							android:textSize="@dimen/normal_text_size"
							android:textStyle="normal"
							tools:ignore="TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />
					</LinearLayout>
				</LinearLayout>
			</ScrollView>

			<!-- Action buttons (Cancel & Apply Changes) -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/_5"
				android:baselineAligned="true"
				android:orientation="horizontal">

				<!-- Negative button (Cancel) -->
				<RelativeLayout
					android:id="@+id/button_dialog_negative_container"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_5"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_5"
					android:layout_weight="1"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:visibility="gone"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/button_dialog_negative"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_margin="@dimen/_7"
						android:drawableStart="@drawable/ic_button_cancel"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_text_primary"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:maxLines="1"
						android:text="@string/title_cancel"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</RelativeLayout>

				<!-- Positive button (Apply Changes) -->
				<RelativeLayout
					android:id="@+id/btn_dialog_positive_container"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_5"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_5"
					android:layout_weight="1"
					android:background="@drawable/ic_button_selector_secondary"
					android:clickable="true"
					android:elevation="@dimen/_2"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/btn_dialog_positive"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_margin="@dimen/_7"
						android:drawableStart="@drawable/ic_button_checked_circle"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_on_secondary"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:maxLines="1"
						android:text="@string/title_apply_changes"
						android:textColor="@color/color_on_secondary"
						android:textSize="@dimen/normal_text_size"
						android:textFontWeight="600"
						tools:ignore="TextContrastCheck" />
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>