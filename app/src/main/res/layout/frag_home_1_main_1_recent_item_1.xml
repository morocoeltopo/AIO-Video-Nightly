<?xml version="1.0" encoding="utf-8"?>
<!-- Recent download item layout with thumbnail and media indicators -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_container"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/ic_button_negative_selector"
	android:clickable="true"
	android:orientation="vertical"
	tools:ignore="UseAppTint,SpeakableTextPresentCheck">

	<!-- Thumbnail container with rounded corners and shadow -->
	<androidx.cardview.widget.CardView
		android:id="@+id/container_img_thumbnail"
		android:layout_width="@dimen/_95"
		android:layout_height="@dimen/_75"
		android:layout_margin="@dimen/_3"
		android:outlineAmbientShadowColor="@color/color_secondary"
		app:cardBackgroundColor="@color/color_background"
		app:cardCornerRadius="@dimen/_5">

		<!-- File thumbnail image with fallback -->
		<ImageView
			android:id="@+id/img_file_thumbnail"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerVertical="true"
			android:adjustViewBounds="true"
			android:importantForAccessibility="no"
			android:scaleType="centerCrop"
			android:src="@drawable/image_no_thumb_available"
			tools:ignore="ImageContrastCheck" />

		<!-- Play indicator overlay for media files (hidden by default) -->
		<ImageView
			android:id="@+id/img_media_play_indicator"
			android:layout_width="@dimen/_20"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:adjustViewBounds="true"
			android:alpha="0.8"
			android:visibility="gone"
			android:elevation="@dimen/_5"
			android:importantForAccessibility="no"
			android:src="@drawable/image_media_play"
			android:tint="@color/color_on_primary"
			tools:ignore="ImageContrastCheck" />

		<!-- Site favicon indicator (hidden by default) -->
		<ImageView
			android:id="@+id/img_site_favicon"
			android:layout_width="@dimen/_20"
			android:layout_height="wrap_content"
			android:layout_gravity="start|top"
			android:layout_marginStart="@dimen/_5"
			android:layout_marginTop="@dimen/_5"
			android:adjustViewBounds="true"
			android:elevation="@dimen/_5"
			android:importantForAccessibility="no"
			android:src="@drawable/ic_button_information"
			android:visibility="gone"
			tools:ignore="ImageContrastCheck" />

		<!-- Media duration indicator container (hidden by default) -->
		<LinearLayout
			android:id="@+id/container_media_duration"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:layout_marginStart="@dimen/_5"
			android:layout_marginTop="@dimen/_5"
			android:layout_marginEnd="@dimen/_5"
			android:layout_marginBottom="@dimen/_5"
			android:background="@drawable/rounded_primary_color"
			android:orientation="vertical"
			android:visibility="gone">

			<!-- Media duration text -->
			<TextView
				android:id="@+id/txt_media_duration"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_5"
				android:layout_marginTop="@dimen/_1"
				android:layout_marginEnd="@dimen/_5"
				android:layout_marginBottom="@dimen/_1"
				android:fontFamily="@font/application_font_family"
				android:text="@string/text_time_representation"
				android:textColor="@color/color_on_primary"
				android:textSize="@dimen/small_text_size"
				android:textStyle="normal"
				tools:ignore="TextContrastCheck" />

		</LinearLayout>

	</androidx.cardview.widget.CardView>
</LinearLayout>