<?xml version="1.0" encoding="utf-8"?><!-- Dialog layout with title, content list, and action buttons -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- Card container for dialog -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Title section -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_cardview_title_bg"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_dialog_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_10"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_theme_appearance"
					android:textColor="@color/color_text_primary"
					android:textFontWeight="600"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- Scrollable content area -->
			<ScrollView
				android:id="@+id/middle_theme_group_container"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1">

				<!-- Radio group for theme selection -->
				<RadioGroup
					android:id="@+id/theme_options_container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_10"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_5"
					android:background="@drawable/ic_button_negative_selector"
					android:orientation="vertical"
					android:textSize="@dimen/normal_text_size">

					<RadioButton
						android:id="@+id/btn_system_default"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/ic_button_negative_selector"
						android:button="@null"
						android:drawableStart="@drawable/ic_button_radio_selector"
						android:drawableEnd="@drawable/ic_button_open_small"
						android:drawablePadding="@dimen/_10"
						android:drawableTint="@color/color_secondary"
						android:fontFamily="@font/application_font_family"
						android:paddingTop="@dimen/_3"
						android:paddingBottom="@dimen/_3"
						android:text="@string/title_system_default"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size"
						tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

					<RadioButton
						android:id="@+id/btn_dark_mode_ui"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/ic_button_negative_selector"
						android:button="@null"
						android:drawableStart="@drawable/ic_button_radio_selector"
						android:drawableEnd="@drawable/ic_button_open_small"
						android:drawablePadding="@dimen/_10"
						android:drawableTint="@color/color_secondary"
						android:fontFamily="@font/application_font_family"
						android:paddingTop="@dimen/_3"
						android:paddingBottom="@dimen/_3"
						android:text="@string/title_dark_mode_ui"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size"
						tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

					<RadioButton
						android:id="@+id/btn_light_mode_ui"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/ic_button_negative_selector"
						android:button="@null"
						android:drawableStart="@drawable/ic_button_radio_selector"
						android:drawableEnd="@drawable/ic_button_open_small"
						android:drawablePadding="@dimen/_10"
						android:drawableTint="@color/color_secondary"
						android:fontFamily="@font/application_font_family"
						android:paddingTop="@dimen/_3"
						android:paddingBottom="@dimen/_3"
						android:text="@string/title_light_mode_ui"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size"
						tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

				</RadioGroup>
			</ScrollView>

			<!-- Action buttons -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/_5"
				android:baselineAligned="true"
				android:orientation="horizontal">

				<!-- Positive / Apply button -->
				<RelativeLayout
					android:id="@+id/btn_dialog_positive_container"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_5"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_5"
					android:layout_weight="1"
					android:background="@drawable/ic_button_selector_secondary"
					android:clickable="true"
					android:elevation="@dimen/_2"
					tools:ignore="TouchTargetSizeCheck,UselessParent">

					<TextView
						android:id="@+id/btn_dialog_positive"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_margin="@dimen/_7"
						android:drawableStart="@drawable/ic_button_checked_circle"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_on_secondary"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:maxLines="1"
						android:text="@string/title_apply_changes"
						android:textColor="@color/color_on_secondary"
						android:textFontWeight="600"
						android:textSize="@dimen/normal_text_size"
						tools:ignore="TextContrastCheck" />
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
