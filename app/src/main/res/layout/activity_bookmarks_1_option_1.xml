<?xml version="1.0" encoding="utf-8"?>
<!-- =========================================================================
     Bookmark Options Dialog Layout
     Defines a dialog presenting various bookmark management actions such as
     edit, set homepage, open, share, copy, and delete. Each option is a
     clickable LinearLayout for easy customization and unified styling.
     ========================================================================= -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- ============================================================
		 CARD CONTAINER
		 Provides a clean visual background with elevation, rounded
		 corners, and consistent margins for dialog options.
		 ============================================================ -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_2">

		<!-- ======================================================
			 ROOT LAYOUT
			 Stacks all bookmark option buttons vertically inside the card.
			 ====================================================== -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- ==================================================
				 TITLE BAR
				 Displays dialog title text on a colored background.
				 ================================================== -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/_35"
				android:background="@color/color_cardview_title_bg"
				android:orientation="horizontal"
				android:visibility="visible">

				<TextView
					style="@style/style_dialog.title"
					android:layout_gravity="center"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_bookmark_options"
					android:textColor="@color/color_text_primary"
					android:textFontWeight="600"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 EDIT BOOKMARK OPTION
				 Allows the user to rename or modify an existing bookmark.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_edit_bookmark"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:layout_marginTop="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_edit_text"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_edit_bookmark"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 SET AS HOMEPAGE OPTION
				 Sets the selected bookmark as the default browser homepage.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_browser_homepage"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_save_bookmark"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/text_make_default_homepage"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 OPEN IN BROWSER OPTION
				 Launches the bookmark in an external web browser.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_open_bookmark"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_open_v2"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_open_in_browser"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 SHARE BOOKMARK OPTION
				 Shares the bookmark link using other installed applications.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_share_bookmark"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_share_v3"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_share_bookmark"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 COPY BOOKMARK OPTION
				 Copies the bookmarkâ€™s URL to the system clipboard.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_copy_bookmark"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_clipboard_v2"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_copy_bookmark"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 DELETE BOOKMARK OPTION
				 Permanently removes the selected bookmark entry.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_delete_bookmark"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:layout_marginBottom="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_delete_v2"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_delete_bookmark"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>