<?xml version="1.0" encoding="utf-8"?><!-- List item layout for browser tab in tabs dialog -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/transparent"
	android:orientation="vertical"
	tools:ignore="UseAppTint">

	<!-- Tab info container (clickable area) -->
	<RelativeLayout
		android:id="@+id/browser_tab_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:layout_marginStart="@dimen/_10"
		android:layout_marginTop="@dimen/_5"
		android:layout_marginEnd="@dimen/_10"
		android:layout_marginBottom="@dimen/_5"
		android:layout_toStartOf="@+id/btn_browser_tab_close"
		android:background="@drawable/ic_webtab_selector_background"
		android:clickable="true"
		android:elevation="@dimen/_1"
		tools:ignore="TouchTargetSizeCheck">

		<!-- Container website favicon indicator -->
		<androidx.cardview.widget.CardView
			android:id="@+id/container_btn_tab_favicon"
			android:layout_width="@dimen/_24"
			android:layout_height="@dimen/_24"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/_10"
			android:layout_marginEnd="@dimen/_8"
			app:cardBackgroundColor="@color/transparent"
			app:cardCornerRadius="@dimen/_10"
			app:cardElevation="@dimen/_0">

			<!-- Website favicon indicator -->
			<ImageView
				android:id="@+id/btn_tab_favicon"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:adjustViewBounds="true"
				android:importantForAccessibility="no"
				android:src="@drawable/ic_image_anim_favicon"
				android:visibility="visible"
				tools:ignore="ImageContrastCheck" />
		</androidx.cardview.widget.CardView>

		<!-- Text container for title and URL -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/_5"
			android:layout_marginTop="@dimen/_5"
			android:layout_marginEnd="@dimen/_10"
			android:layout_marginBottom="@dimen/_5"
			android:layout_toEndOf="@+id/container_btn_tab_favicon"
			android:orientation="vertical">

			<!-- Tab title (website name) -->
			<TextView
				android:id="@+id/browser_tab_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:fontFamily="@font/application_font_family"
				android:gravity="center_vertical"
				android:maxLines="1"
				android:singleLine="true"
				android:text="@string/text_sample_google_domain"
				android:textSize="@dimen/message_text_size"
				android:textStyle="bold" />

			<!-- Tab URL (website address) -->
			<TextView
				android:id="@+id/browser_tab_url"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:fontFamily="@font/application_font_family"
				android:gravity="center_vertical"
				android:maxLines="1"
				android:singleLine="true"
				android:text="@string/text__"
				android:textColor="@color/color_text_hint"
				android:textSize="@dimen/smaller_text_size"
				android:textStyle="italic"
				tools:ignore="TextContrastCheck" />
		</LinearLayout>
	</RelativeLayout>

	<!-- Close tab button (X icon) -->
	<ImageView
		android:id="@+id/btn_browser_tab_close"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/_35"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layout_marginStart="@dimen/_0"
		android:layout_marginEnd="@dimen/_10"
		android:adjustViewBounds="true"
		android:background="@drawable/ic_button_negative_selector"
		android:clickable="true"
		android:importantForAccessibility="no"
		android:src="@drawable/ic_button_cancel"
		android:tint="@color/color_secondary"
		tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

</RelativeLayout>