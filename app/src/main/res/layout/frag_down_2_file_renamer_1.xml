<?xml version="1.0" encoding="utf-8"?><!-- Dialog layout for renaming files with input field and apply button -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- Main card container with rounded corners and shadow -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<!-- Vertical layout for organizing dialog content -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Header section with surface background -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_cardview_title_bg"
				android:orientation="vertical">

				<!-- Dialog title for file renaming -->
				<TextView
					android:id="@+id/txt_dialog_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_10"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_change_file_name"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					android:textFontWeight="600"/>
			</LinearLayout>

			<!-- File name input container with rounded background -->
			<LinearLayout
				android:id="@+id/edit_field_file_name_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_10"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_5"
				android:background="@drawable/rounded_surface_color"
				android:orientation="vertical">

				<!-- File name input field with edit icon -->
				<EditText
					android:id="@+id/edit_field_file_name"
					style="@style/style_dialog.message"
					android:layout_margin="@dimen/_8"
					android:background="@color/transparent"
					android:drawableStart="@drawable/ic_button_edit_text"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:gravity="center_vertical"
					android:hint="@string/title_type_new_file_name_hint"
					android:importantForAutofill="no"
					android:inputType="textUri"
					android:maxLines="1"
					android:singleLine="true"
					android:textColor="@color/color_on_surface"
					android:textColorHint="@color/color_text_hint"
					android:textSize="@dimen/normal_text_size"
					android:textStyle="normal"
					tools:ignore="TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />
			</LinearLayout>

			<!-- Apply changes button -->
			<RelativeLayout
				android:id="@+id/btn_dialog_positive_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_5"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_5"
				android:background="@drawable/ic_button_selector_secondary"
				android:clickable="true"
				android:elevation="@dimen/_2"
				tools:ignore="TouchTargetSizeCheck">

				<!-- Apply button with rename icon -->
				<TextView
					android:id="@+id/btn_dialog_positive"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_margin="@dimen/_7"
					android:drawableStart="@drawable/ic_button_rename"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_on_secondary"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:singleLine="true"
					android:text="@string/title_apply_changes"
					android:textColor="@color/color_on_secondary"
					android:textSize="@dimen/normal_text_size"
					android:textFontWeight="600"/>
			</RelativeLayout>

			<!-- Helper text explaining the rename action -->
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_2"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_8"
				android:ellipsize="end"
				android:fontFamily="@font/application_font_family"
				android:maxLines="2"
				android:text="@string/text_file_name_will_be_renamed"
				android:textColor="@color/color_text_hint"
				android:textSize="@dimen/small_text_size"
				tools:ignore="TextContrastCheck" />

		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>