<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog layout for download location selection -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- Main dialog card container -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_background"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Hidden title section (currently not visible) -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_surface"
				android:orientation="vertical"
				android:visibility="visible">

				<TextView
					android:id="@+id/txt_dialog_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_10"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_download_location"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					android:textStyle="bold" />
			</LinearLayout>

			<!-- Radio button group for location options -->
			<LinearLayout
				android:id="@+id/radio_group"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_10"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_5"
				android:orientation="vertical">

				<!-- Private folder option -->
				<LinearLayout
					android:id="@+id/button_app_private_folder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_0"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_0"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="horizontal">

					<!-- Radio button indicator (checked state) -->
					<ImageView
						android:id="@+id/btn_app_private_folder_radio"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_gravity="center_vertical"
						android:layout_marginStart="@dimen/_5"
						android:adjustViewBounds="true"
						android:importantForAccessibility="no"
						android:src="@drawable/ic_button_checked_circle"
						android:tint="@color/color_secondary"
						tools:ignore="ImageContrastCheck" />

					<!-- Text content for private folder option -->
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_10"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginEnd="@dimen/_0"
						android:layout_marginBottom="@dimen/_5"
						android:layout_weight="1"
						android:orientation="vertical">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:fontFamily="@font/application_font_family"
							android:text="@string/title_private_folder"
							android:textColor="@color/color_text_primary"
							android:textSize="@dimen/normal_text_size"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/txt_private_folder_description"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/_0"
							android:layout_marginTop="@dimen/_0"
							android:layout_marginEnd="@dimen/_0"
							android:layout_marginBottom="@dimen/_0"
							android:fontFamily="@font/application_font_family"
							android:text="@string/text_not_visible_in_system_gallery"
							android:textColor="@color/color_text_secondary"
							android:textSize="@dimen/small_text_size" />
					</LinearLayout>
				</LinearLayout>

				<!-- System gallery option -->
				<LinearLayout
					android:id="@+id/btn_system_gallery"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_0"
					android:layout_marginTop="@dimen/_5"
					android:layout_marginEnd="@dimen/_0"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="horizontal">

					<!-- Radio button indicator (unchecked state) -->
					<ImageView
						android:id="@+id/button_system_gallery_radio"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_gravity="center_vertical"
						android:layout_marginStart="@dimen/_5"
						android:adjustViewBounds="true"
						android:importantForAccessibility="no"
						android:src="@drawable/ic_button_unchecked_circle"
						android:tint="@color/color_secondary"
						tools:ignore="ImageContrastCheck" />

					<!-- Text content for system gallery option -->
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_10"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginEnd="@dimen/_0"
						android:layout_marginBottom="@dimen/_5"
						android:layout_weight="1"
						android:orientation="vertical">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:fontFamily="@font/application_font_family"
							android:text="@string/title_system_gallery"
							android:textColor="@color/color_text_primary"
							android:textSize="@dimen/normal_text_size"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/txt_system_gallery_description"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/_0"
							android:layout_marginTop="@dimen/_0"
							android:layout_marginEnd="@dimen/_0"
							android:layout_marginBottom="@dimen/_0"
							android:fontFamily="@font/application_font_family"
							android:text="@string/text_visible_in_system_gallery"
							android:textColor="@color/color_text_secondary"
							android:textSize="@dimen/small_text_size" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<!-- Apply changes button -->
			<RelativeLayout
				android:id="@+id/btn_dialog_positive_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_5"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_5"
				android:background="@drawable/ic_button_selector_secondary"
				android:clickable="true"
				android:elevation="@dimen/_2"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:id="@+id/btn_dialog_positive"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_margin="@dimen/_7"
					android:drawableStart="@drawable/ic_button_settings"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_on_secondary"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:text="@string/title_apply_changes"
					android:textColor="@color/color_on_secondary"
					android:textSize="@dimen/normal_text_size"
					android:textStyle="bold" />
			</RelativeLayout>

			<!-- Informational footnote -->
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_2"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_8"
				android:fontFamily="@font/application_font_family"
				android:text="@string/text_changes_will_apply_on_next_download"
				android:textColor="@color/color_text_secondary"
				android:textSize="@dimen/small_text_size" />
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>