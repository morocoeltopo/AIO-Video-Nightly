<?xml version="1.0" encoding="utf-8"?><!-- Dialog layout for selecting content region/location with app restart notice -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- Dialog card container -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_background"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Hidden title section (currently not visible) -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_surface"
				android:orientation="vertical"
				android:visibility="visible">

				<TextView
					android:id="@+id/txt_dialog_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_10"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_your_content_region"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					android:textStyle="bold" />
			</LinearLayout>

			<!-- Scrollable list of content region/location options -->
			<ScrollView
				android:id="@+id/middle_content_region_selection"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<!-- Radio group for selecting a region/location -->
					<RadioGroup
						android:id="@+id/content_region_options_container"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_10"
						android:layout_marginTop="@dimen/_10"
						android:layout_marginEnd="@dimen/_10"
						android:layout_marginBottom="@dimen/_5"
						android:background="@drawable/ic_button_negative_selector"
						android:orientation="vertical"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>
			</ScrollView>

			<!-- Apply button container -->
			<RelativeLayout
				android:id="@+id/btn_dialog_positive_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_5"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_5"
				android:background="@drawable/ic_button_selector_secondary"
				android:clickable="true"
				android:elevation="@dimen/_2"
				tools:ignore="TouchTargetSizeCheck">

				<!-- Apply button with icon -->
				<TextView
					android:id="@+id/btn_dialog_positive"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_margin="@dimen/_7"
					android:drawableStart="@drawable/ic_button_settings"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_on_secondary"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:text="@string/title_apply_changes"
					android:textColor="@color/color_on_secondary"
					android:textSize="@dimen/normal_text_size"
					android:textStyle="bold" />
			</RelativeLayout>

			<!-- Note: App must restart for changes to apply -->
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_2"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_8"
				android:fontFamily="@font/application_font_family"
				android:text="@string/text_app_will_restart_to_take_effect"
				android:textColor="@color/color_text_secondary"
				android:textSize="@dimen/small_text_size" />

		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
