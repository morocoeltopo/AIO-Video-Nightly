<?xml version="1.0" encoding="utf-8"?><!-- Container layout for displaying download tasks queue with scrollable content -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/transparent"
	android:orientation="vertical"
	tools:ignore="SpeakableTextPresentCheck">

	<!-- Container for download task items arranged vertically -->
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/btn_go_back_finished_tasks"
		tools:ignore="UselessParent,SpeakableTextPresentCheck">

		<LinearLayout
			android:id="@+id/container_download_tasks_queue"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_0"
			android:layout_marginEnd="@dimen/_0"
			android:divider="@color/transparent"
			android:orientation="vertical" />
	</ScrollView>

	<!-- Button to show download files -->
	<RelativeLayout
		android:id="@+id/btn_go_back_finished_tasks"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginStart="@dimen/_25"
		android:layout_marginTop="@dimen/_8"
		android:layout_marginEnd="@dimen/_25"
		android:layout_marginBottom="@dimen/_10"
		android:background="@drawable/ic_button_selector_secondary"
		android:clickable="true"
		android:elevation="@dimen/_2"
		tools:ignore="TouchTargetSizeCheck">

		<!-- How to go back button with arrow icon -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_margin="@dimen/_7"
			android:drawableStart="@drawable/ic_button_arrow_back"
			android:drawablePadding="@dimen/_5"
			android:drawableTint="@color/color_on_secondary"
			android:fontFamily="@font/application_font_family"
			android:gravity="center"
			android:text="@string/title_go_back_to_finished_tasks"
			android:textColor="@color/color_on_secondary"
			android:textSize="@dimen/normal_text_size"
			android:textFontWeight="600"
			tools:ignore="UseCompatTextViewDrawableXml" />
	</RelativeLayout>
</RelativeLayout>