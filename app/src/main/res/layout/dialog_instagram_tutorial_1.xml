<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog layout for Instagram Reel download tutorial -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- Main dialog card container -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_background"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Dialog title section -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_surface"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_dialog_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_10"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_download_instagram_reel"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					android:textStyle="bold" />
			</LinearLayout>

			<!-- Scrollable content area for tutorial steps -->
			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_3"
					android:layout_marginEnd="@dimen/_10"
					android:orientation="vertical"
					tools:ignore="UseCompoundDrawables">

					<!-- Step 1: Image and description -->
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/_5"
						app:cardBackgroundColor="@color/color_background"
						app:cardCornerRadius="@dimen/_10">

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:adjustViewBounds="true"
							android:importantForAccessibility="no"
							android:src="@drawable/ic_inst_how_to_guide_1" />
					</androidx.cardview.widget.CardView>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_margin="@dimen/_2"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:text="@string/text_inst_how_to_guide_1"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/message_text_size" />

					<!-- Step 2: Image and description -->
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/_5"
						app:cardBackgroundColor="@color/color_background"
						app:cardCornerRadius="@dimen/_10">

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:adjustViewBounds="true"
							android:importantForAccessibility="no"
							android:src="@drawable/ic_inst_how_to_guide_2" />
					</androidx.cardview.widget.CardView>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_margin="@dimen/_2"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:text="@string/text_inst_how_to_guide_2"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/message_text_size" />

					<!-- Step 3: Image and description -->
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_5"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginEnd="@dimen/_5"
						android:layout_marginBottom="@dimen/_8"
						app:cardBackgroundColor="@color/color_background"
						app:cardCornerRadius="@dimen/_10">

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:adjustViewBounds="true"
							android:importantForAccessibility="no"
							android:src="@drawable/ic_inst_how_to_guide_3" />
					</androidx.cardview.widget.CardView>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_margin="@dimen/_2"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:text="@string/text_inst_how_to_guide_3"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/message_text_size" />

					<!-- Step 4: Image and description -->
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_5"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginEnd="@dimen/_5"
						android:layout_marginBottom="@dimen/_8"
						app:cardBackgroundColor="@color/color_background"
						app:cardCornerRadius="@dimen/_10">

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:adjustViewBounds="true"
							android:importantForAccessibility="no"
							android:src="@drawable/ic_fb_how_to_guide_4"
							tools:ignore="ImageContrastCheck" />

					</androidx.cardview.widget.CardView>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_margin="@dimen/_2"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:text="@string/text_inst_how_to_guide_4"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/message_text_size"
						tools:ignore="VisualLintLongText" />

					<!-- Bottom spacing -->
					<Space
						android:layout_width="match_parent"
						android:layout_height="@dimen/_8" />
				</LinearLayout>
			</ScrollView>

			<!-- OK button container -->
			<RelativeLayout
				android:id="@+id/btn_dialog_positive_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_8"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_8"
				android:background="@drawable/ic_button_selector_secondary"
				android:clickable="true"
				android:elevation="@dimen/_2"
				tools:ignore="TouchTargetSizeCheck">

				<!-- OK button with check icon -->
				<TextView
					android:id="@+id/btn_dialog_positive"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_margin="@dimen/_7"
					android:drawableStart="@drawable/ic_button_checked_circle"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_on_secondary"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:text="@string/title_okay"
					android:textColor="@color/color_on_secondary"
					android:textSize="@dimen/normal_text_size"
					android:textStyle="bold"
					tools:ignore="TextContrastCheck" />
			</RelativeLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>