<?xml version="1.0" encoding="utf-8"?><!-- Dialog layout for displaying grabbed video URLs -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml,VisualLintBounds">

	<!-- Main dialog card container -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Dialog title section -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_cardview_title_bg"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_dialog_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_10"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_grabbed_videos"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					android:textFontWeight="600" />

			</LinearLayout>

			<!-- List view to display extracted video URLs -->
			<ListView
				android:id="@+id/list_extracted_video_urls"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:divider="@color/transparent" />

			<!-- Close button container -->
			<RelativeLayout
				android:id="@+id/btn_dialog_positive_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_5"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_5"
				android:background="@drawable/ic_button_selector_secondary"
				android:baselineAligned="true"
				android:clickable="true"
				android:elevation="@dimen/_2"
				tools:ignore="TouchTargetSizeCheck">

				<!-- Close button with check icon -->
				<TextView
					android:id="@+id/btn_dialog_positive"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_margin="@dimen/_7"
					android:drawableStart="@drawable/ic_button_checked_circle"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_on_secondary"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_close"
					android:textColor="@color/color_on_secondary"
					android:textSize="@dimen/normal_text_size"
					android:textFontWeight="600" />
			</RelativeLayout>

			<!-- Informational footnote about task progress -->
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_2"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_8"
				android:ellipsize="end"
				android:fontFamily="@font/application_font_family"
				android:maxLines="2"
				android:text="@string/text_go_to_tasks_tab_to_see_progress"
				android:textColor="@color/color_text_secondary"
				android:textSize="@dimen/small_text_size" />

		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>