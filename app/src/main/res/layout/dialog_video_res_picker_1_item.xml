<?xml version="1.0" encoding="utf-8"?><!-- Layout for a video format/resolution option item with border -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@color/transparent"
	android:orientation="vertical">

	<!-- Main container with bordered background and elevation -->
	<RelativeLayout
		android:id="@+id/main_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:layout_margin="@dimen/_5"
		android:background="@drawable/rounded_secondary_color_border"
		android:elevation="@dimen/_2"
		android:orientation="vertical"
		tools:ignore="UselessParent">

		<!-- Resolution text (e.g., "1080p", "720p") -->
		<TextView
			android:id="@+id/txt_resolution"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_marginStart="@dimen/_5"
			android:layout_marginTop="@dimen/_8"
			android:layout_marginEnd="@dimen/_5"
			android:layout_marginBottom="@dimen/_0"
			android:fontFamily="@font/application_font_family"
			android:gravity="center"
			android:maxLines="1"
			android:text="@string/title__"
			android:textColor="@color/color_text_primary"
			android:textSize="@dimen/sub_heading_text_size"
			android:textFontWeight="600" />

		<!-- File size text (semi-transparent, shown below resolution) -->
		<TextView
			android:id="@+id/txt_file_size"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/txt_resolution"
			android:layout_marginStart="@dimen/_5"
			android:layout_marginTop="@dimen/_0"
			android:layout_marginEnd="@dimen/_5"
			android:layout_marginBottom="@dimen/_8"
			android:alpha="0.5"
			android:fontFamily="@font/application_font_family"
			android:gravity="center"
			android:maxLines="1"
			android:text="@string/title__"
			android:textColor="@color/color_text_secondary"
			android:textSize="@dimen/message_text_size"
			android:textStyle="italic"
			tools:ignore="TextContrastCheck" />

		<!-- Selection checkmark icon (shown at the right end) -->
		<ImageView
			android:id="@+id/img_checkbox_selection"
			android:layout_width="@dimen/_25"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="@dimen/_0"
			android:layout_marginTop="@dimen/_0"
			android:layout_marginEnd="@dimen/_0"
			android:layout_marginBottom="@dimen/_0"
			android:adjustViewBounds="true"
			android:elevation="@dimen/_1"
			android:importantForAccessibility="no"
			android:src="@drawable/ic_button_checked_circle_small"
			android:visibility="visible"
			app:tint="@color/color_on_secondary"
			tools:ignore="ImageContrastCheck" />
	</RelativeLayout>

</RelativeLayout>
