<?xml version="1.0" encoding="utf-8"?>
<!-- Media options dialog layout with action buttons -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- Dialog card container -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_2">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Dialog title bar -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/_35"
				android:layout_marginStart="@dimen/_0"
				android:layout_marginTop="@dimen/_0"
				android:layout_marginEnd="@dimen/_0"
				android:layout_marginBottom="@dimen/_0"
				android:background="@color/color_cardview_title_bg"
				android:orientation="horizontal"
				android:visibility="visible">

				<TextView
					style="@style/style_dialog.title"
					android:layout_gravity="center"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_media_options"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					android:textFontWeight="600" />
			</LinearLayout>

			<!-- Delete file option -->
			<LinearLayout
				android:id="@+id/btn_delete_file"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_10"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_0"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_delete_v2"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/text_delete_from_disk"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- Convert to audio option -->
			<LinearLayout
				android:id="@+id/btn_convert_to_audio"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_0"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_0"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_sound"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/text_convert_to_audio"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- Open externally option -->
			<LinearLayout
				android:id="@+id/btn_open_in_another"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_0"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_0"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_player"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/text_open_externally"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- Discover video source option -->
			<LinearLayout
				android:id="@+id/btn_discover_video"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_0"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_0"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				android:visibility="visible"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_open_v2"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/text_open_video_site"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- File information option -->
			<LinearLayout
				android:id="@+id/btn_media_info"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_0"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_information"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/text_file_information"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>