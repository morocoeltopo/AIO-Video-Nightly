<?xml version="1.0" encoding="utf-8"?>
<!-- =========================================================================
     Media Options Dialog Layout
     Defines a popup dialog for media-related actions such as delete, convert,
     open externally, snapshot, and more. Each option is represented by a
     clickable LinearLayout inside a CardView for clean visual grouping.
     ========================================================================= -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- ============================================================
		 SCROLL VIEW CONTAINER
		 Wraps the entire dialog content to enable scrolling when
		 settings options exceed available screen height. Ensures
		 all options remain accessible on smaller displays.
		 ============================================================ -->
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<!-- ======================================================
			 SCROLL CONTENT CONTAINER
			 LinearLayout container for scrollable content that
			 maintains vertical orientation and proper spacing
			 for all settings sections.
			 ====================================================== -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

		</LinearLayout>
	</ScrollView>
</LinearLayout>