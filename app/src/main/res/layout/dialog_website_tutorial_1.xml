<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog layout showing a step-by-step how-to guide for web video downloading -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- Main card container with rounded corners and shadow -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<!-- Vertical layout for organizing guide content -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Header section with surface background -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_cardview_title_bg"
				android:orientation="vertical">

				<!-- Dialog title -->
				<TextView
					android:id="@+id/txt_dialog_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_10"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_download_video_from_web"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					android:textFontWeight="600"/>
			</LinearLayout>

			<!-- Scrollable area for the step-by-step guide -->
			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1">

				<!-- Container for guide steps (images + descriptions) -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_3"
					android:layout_marginEnd="@dimen/_10"
					android:orientation="vertical"
					tools:ignore="UseCompoundDrawables">

					<!-- Step 1: Image in card with rounded corners -->
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/_5"
						app:cardBackgroundColor="@color/color_background"
						app:cardCornerRadius="@dimen/_10">

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:adjustViewBounds="true"
							android:importantForAccessibility="no"
							android:src="@drawable/ic_web_how_to_guide_1"
							tools:ignore="ImageContrastCheck" />
					</androidx.cardview.widget.CardView>

					<!-- Step 1 description text -->
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_margin="@dimen/_2"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:text="@string/text_web_how_to_guide_1"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/message_text_size"
						tools:ignore="VisualLintLongText" />

					<!-- Step 2: Image in card -->
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/_5"
						app:cardBackgroundColor="@color/color_background"
						app:cardCornerRadius="@dimen/_10">

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:adjustViewBounds="true"
							android:importantForAccessibility="no"
							android:src="@drawable/ic_web_how_to_guide_2" />
					</androidx.cardview.widget.CardView>

					<!-- Step 2 description text -->
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_margin="@dimen/_2"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:text="@string/text_web_how_to_guide_2"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/message_text_size" />

					<!-- Step 3: Image in card with adjusted margins -->
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_5"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginEnd="@dimen/_5"
						android:layout_marginBottom="@dimen/_8"
						app:cardBackgroundColor="@color/color_background"
						app:cardCornerRadius="@dimen/_10">

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:adjustViewBounds="true"
							android:importantForAccessibility="no"
							android:src="@drawable/ic_web_how_to_guide_3" />
					</androidx.cardview.widget.CardView>

					<!-- Step 3 description text -->
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:layout_margin="@dimen/_2"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:text="@string/text_web_how_to_guide_3"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/message_text_size" />

					<!-- Spacer at the bottom of the scroll view -->
					<Space
						android:layout_width="match_parent"
						android:layout_height="@dimen/_8" />
				</LinearLayout>
			</ScrollView>

			<!-- Confirmation/OK button at the bottom -->
			<RelativeLayout
				android:id="@+id/btn_dialog_positive_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_8"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_8"
				android:background="@drawable/ic_button_selector_secondary"
				android:clickable="true"
				android:elevation="@dimen/_2"
				tools:ignore="TouchTargetSizeCheck">

				<!-- OK button with checkmark icon -->
				<TextView
					android:id="@+id/btn_dialog_positive"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_margin="@dimen/_7"
					android:drawableStart="@drawable/ic_button_checked_circle"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_on_secondary"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:text="@string/title_okay"
					android:textColor="@color/color_on_secondary"
					android:textSize="@dimen/normal_text_size"
					android:textFontWeight="600"
					tools:ignore="TextContrastCheck" />
			</RelativeLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>