<?xml version="1.0" encoding="utf-8"?>
<!-- =========================================================================
     Media Player Playback Controls (Merge Layout)
     Defines the main playback control interface with transport controls,
     lock functionality, and player configuration access. Features a
     balanced horizontal layout with weighted distribution for consistent
     spacing across different screen sizes.
     ========================================================================= -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:ignore="UseAppTint">

	<!-- ============================================================
		 MAIN PLAYBACK CONTROLS CONTAINER
         Horizontal container that evenly distributes five control
         buttons using weight sum for proportional sizing. Provides
         consistent margins and centered vertical alignment.
		 ============================================================ -->
	<LinearLayout
		android:id="@+id/btn_container_main_playback"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_50"
		android:layout_marginStart="@dimen/_10"
		android:layout_marginTop="@dimen/_0"
		android:layout_marginEnd="@dimen/_10"
		android:layout_marginBottom="@dimen/_0"
		android:baselineAligned="false"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:weightSum="5">

		<!-- ======================================================
			 LOCK CONTROLS BUTTON
             Toggles UI lock mode to prevent accidental touches
             during playback. First in the control sequence for
             easy access to immersion mode.
			 ====================================================== -->
		<RelativeLayout
			android:id="@+id/btn_video_controllers_lock"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ic_button_negative_selector"
			android:clickable="true"
			android:orientation="vertical"
			tools:ignore="SpeakableTextPresentCheck">

			<!-- Lock icon with secondary color tint -->
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_gravity="center"
				android:adjustViewBounds="true"
				android:importantForAccessibility="no"
				android:src="@drawable/ic_button_lock"
				android:tint="@color/color_secondary"
				tools:ignore="ImageContrastCheck" />
		</RelativeLayout>

		<!-- ======================================================
			 PREVIOUS TRACK BUTTON
             Navigates to the previous media item in the playlist
             or restarts current track if pressed near beginning.
             Second position in the control sequence.
			 ====================================================== -->
		<RelativeLayout
			android:id="@+id/btn_video_previous"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ic_button_negative_selector"
			android:clickable="true"
			android:orientation="vertical"
			tools:ignore="SpeakableTextPresentCheck">

			<!-- Previous track icon with secondary color tint -->
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_gravity="center"
				android:adjustViewBounds="true"
				android:importantForAccessibility="no"
				android:src="@drawable/ic_button_media_previous"
				android:tint="@color/color_secondary"
				tools:ignore="ImageContrastCheck" />
		</RelativeLayout>

		<!-- ======================================================
			 PLAY/PAUSE TOGGLE BUTTON
             Primary playback control that toggles between play
             and pause states. Centered position with larger icon
             for emphasis and easy access.
			 ====================================================== -->
		<LinearLayout
			android:id="@+id/btn_video_play_pause_toggle"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ic_button_negative_selector"
			android:clickable="true"
			android:orientation="vertical"
			tools:ignore="SpeakableTextPresentCheck">

			<!-- Dynamic play/pause icon that changes state -->
			<ImageView
				android:id="@+id/btn_img_video_play_pause_toggle"
				android:layout_width="@dimen/_40"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:adjustViewBounds="true"
				android:importantForAccessibility="no"
				android:src="@drawable/ic_button_media_play"
				android:tint="@color/color_secondary"
				tools:ignore="ImageContrastCheck" />
		</LinearLayout>

		<!-- ======================================================
			 NEXT TRACK BUTTON
             Advances to the next media item in the playlist.
             Fourth position in the control sequence, symmetrical
             to previous button.
			 ====================================================== -->
		<RelativeLayout
			android:id="@+id/btn_video_next"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ic_button_negative_selector"
			android:clickable="true"
			android:orientation="vertical"
			tools:ignore="SpeakableTextPresentCheck">

			<!-- Next track icon with secondary color tint -->
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_gravity="center"
				android:adjustViewBounds="true"
				android:importantForAccessibility="no"
				android:src="@drawable/ic_button_media_next"
				android:tint="@color/color_secondary"
				tools:ignore="ImageContrastCheck" />
		</RelativeLayout>

		<!-- ======================================================
			 PLAYER CONFIGURATIONS BUTTON
             Access point for additional player settings like
             playback speed, audio track selection, and subtitle
             options. Final position in the control sequence.
			 ====================================================== -->
		<RelativeLayout
			android:id="@+id/btn_player_configs"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ic_button_negative_selector"
			android:clickable="true"
			android:orientation="vertical"
			tools:ignore="SpeakableTextPresentCheck">

			<!-- Settings/options icon with secondary color tint -->
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_gravity="center"
				android:adjustViewBounds="true"
				android:importantForAccessibility="no"
				android:src="@drawable/ic_button_options"
				android:tint="@color/color_secondary"
				tools:ignore="ImageContrastCheck" />
		</RelativeLayout>

	</LinearLayout>
</merge>