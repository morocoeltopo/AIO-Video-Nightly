<?xml version="1.0" encoding="utf-8"?><!-- Dialog layout for video file information and download option -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- Main card container with rounded corners and shadow -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<!-- Vertical layout for organizing content sections -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Clickable card showing video file information -->
			<RelativeLayout
				android:id="@+id/btn_file_info_card"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_8"
				android:layout_marginTop="@dimen/_8"
				android:layout_marginEnd="@dimen/_8"
				android:layout_marginBottom="@dimen/_0"
				android:background="@drawable/ic_button_cardview_selector"
				android:clickable="true"
				android:elevation="@dimen/_2"
				tools:ignore="DuplicateSpeakableTextCheck">

				<!-- Thumbnail container with rounded corners -->
				<androidx.cardview.widget.CardView
					android:id="@+id/thumbnail_container"
					android:layout_width="@dimen/_85"
					android:layout_height="@dimen/_55"
					android:layout_marginStart="@dimen/_5"
					android:layout_marginTop="@dimen/_5"
					android:layout_marginEnd="@dimen/_0"
					android:layout_marginBottom="@dimen/_5"
					app:cardBackgroundColor="@color/color_cardview_bg"
					app:cardCornerRadius="@dimen/_5">

					<!-- Play indicator overlay for media files (hidden by default) -->
					<ImageView
						android:id="@+id/img_media_play_indicator"
						android:layout_width="@dimen/_20"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:adjustViewBounds="true"
						android:elevation="@dimen/_5"
						android:importantForAccessibility="no"
						android:src="@drawable/image_media_play"
						android:tint="@color/color_on_primary"
						android:visibility="visible"
						tools:ignore="ImageContrastCheck" />

					<!-- Site favicon indicator -->
					<ImageView
						android:id="@+id/img_site_favicon"
						android:layout_width="@dimen/_20"
						android:layout_height="wrap_content"
						android:layout_gravity="start|top"
						android:layout_marginStart="@dimen/_5"
						android:layout_marginTop="@dimen/_5"
						android:adjustViewBounds="true"
						android:elevation="@dimen/_5"
						android:importantForAccessibility="no"
						android:src="@drawable/ic_image_default_favicon"
						android:visibility="visible"
						tools:ignore="ImageContrastCheck" />

					<!-- Video thumbnail image with fallback -->
					<ImageView
						android:id="@+id/image_video_thumbnail"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_centerVertical="true"
						android:adjustViewBounds="true"
						android:importantForAccessibility="no"
						android:scaleType="centerCrop"
						android:src="@drawable/image_no_thumb_available"
						tools:ignore="ImageContrastCheck" />

					<!-- File type indicator -->
					<ImageView
						android:id="@+id/img_file_type_indicator"
						android:layout_width="@dimen/_17"
						android:layout_height="wrap_content"
						android:layout_gravity="start|bottom"
						android:layout_marginStart="@dimen/_5"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginBottom="@dimen/_5"
						android:adjustViewBounds="true"
						android:background="@drawable/rounded_transparent_black"
						android:elevation="@dimen/_2"
						android:importantForAccessibility="no"
						android:src="@drawable/ic_button_video"
						android:tint="@color/color_on_primary"
						android:visibility="visible"
						tools:ignore="ImageContrastCheck" />

					<!-- Private folder activation indicator -->
					<ImageView
						android:id="@+id/img_private_folder_indicator"
						android:layout_width="@dimen/_17"
						android:layout_height="wrap_content"
						android:layout_gravity="end|bottom"
						android:layout_marginStart="@dimen/_5"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginEnd="@dimen/_5"
						android:layout_marginBottom="@dimen/_5"
						android:adjustViewBounds="true"
						android:background="@drawable/rounded_transparent_black"
						android:elevation="@dimen/_2"
						android:importantForAccessibility="no"
						android:src="@drawable/ic_button_folder"
						android:tint="@color/color_on_primary"
						android:visibility="visible"
						tools:ignore="ImageContrastCheck" />

					<!-- Media duration indicator container (hidden by default) -->
					<LinearLayout
						android:id="@+id/container_media_duration"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="end"
						android:layout_marginStart="@dimen/_5"
						android:layout_marginTop="@dimen/_5"
						android:layout_marginEnd="@dimen/_5"
						android:layout_marginBottom="@dimen/_5"
						android:background="@drawable/rounded_primary_color"
						android:orientation="vertical"
						android:visibility="gone">

						<!-- Media duration text -->
						<TextView
							android:id="@+id/txt_media_duration"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/_5"
							android:layout_marginTop="@dimen/_1"
							android:layout_marginEnd="@dimen/_5"
							android:layout_marginBottom="@dimen/_1"
							android:fontFamily="@font/application_font_family"
							android:text="@string/title_time_representation"
							android:textColor="@color/color_on_primary"
							android:textSize="@dimen/small_text_size"
							android:textStyle="normal"
							tools:ignore="TextContrastCheck" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<!-- Container for video metadata (title and resolution) -->
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="@dimen/_8"
					android:layout_marginEnd="@dimen/_5"
					android:layout_toEndOf="@+id/thumbnail_container"
					android:orientation="vertical">

					<!-- Video title with marquee scrolling for long text -->
					<TextView
						android:id="@+id/txt_video_title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_5"
						android:layout_marginBottom="@dimen/_3"
						android:layout_toStartOf="@+id/img_open_options"
						android:ellipsize="marquee"
						android:focusable="true"
						android:focusableInTouchMode="true"
						android:fontFamily="@font/application_font_family"
						android:marqueeRepeatLimit="marquee_forever"
						android:scrollHorizontally="true"
						android:singleLine="true"
						android:text="@string/title__"
						android:textColor="@color/color_on_primary"
						android:textFontWeight="600"
						android:textSize="@dimen/normal_text_size" />

					<!-- Video resolution information in semi-transparent background -->
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/txt_video_title"
						android:layout_toStartOf="@+id/img_open_options"
						android:alpha="0.5"
						android:background="@drawable/rounded_transparent_white_f5"
						android:orientation="vertical">

						<TextView
							android:id="@+id/text_video_resolution"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/_5"
							android:layout_marginTop="@dimen/_2"
							android:layout_marginEnd="@dimen/_5"
							android:layout_marginBottom="@dimen/_2"
							android:alpha="1"
							android:ellipsize="end"
							android:fontFamily="@font/application_font_family"
							android:singleLine="true"
							android:text="@string/title__"
							android:textColor="@color/color_on_primary"
							android:textSize="@dimen/small_text_size"
							tools:ignore="TextContrastCheck" />
					</LinearLayout>

					<!-- Options/edit button (three dots icon) -->
					<ImageView
						android:id="@+id/img_open_options"
						android:layout_width="@dimen/_30"
						android:layout_height="@dimen/_30"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"
						android:layout_marginStart="@dimen/_10"
						android:layout_marginEnd="@dimen/_5"
						android:adjustViewBounds="true"
						android:importantForAccessibility="no"
						android:scaleType="fitCenter"
						android:src="@drawable/ic_button_edit_text"
						android:tint="@color/color_cardview_drawable_tint"
						android:visibility="visible"
						tools:ignore="ImageContrastCheck" />

				</RelativeLayout>
			</RelativeLayout>

			<!-- Private folder download checkbox  -->
			<CheckBox
				android:id="@+id/checkbox_download_at_private"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_36"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_5"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_5"
				android:background="@drawable/ic_button_negative_selector"
				android:button="@null"
				android:clickable="true"
				android:drawableStart="@drawable/ic_button_radio_selector"
				android:drawableEnd="@drawable/ic_button_play_arrow_small"
				android:drawablePadding="@dimen/_10"
				android:drawableTint="@color/color_secondary"
				android:ellipsize="end"
				android:fontFamily="@font/application_font_family"
				android:gravity="center_vertical"
				android:maxLines="1"
				android:text="@string/title_download_at_private_folder"
				android:textColor="@color/color_text_primary"
				android:textSize="@dimen/message_text_size"
				tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

			<!-- Download button with download icon -->
			<RelativeLayout
				android:id="@+id/btn_dialog_positive_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_0"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_5"
				android:background="@drawable/ic_button_selector_secondary"
				android:clickable="true"
				android:elevation="@dimen/_2"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:id="@+id/btn_dialog_positive"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_margin="@dimen/_7"
					android:drawableStart="@drawable/ic_button_download"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_on_secondary"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_download_now"
					android:textColor="@color/color_on_secondary"
					android:textFontWeight="600"
					android:textSize="@dimen/normal_text_size" />
			</RelativeLayout>

			<!-- Helper text directing user to tasks tab for progress tracking -->
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_2"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_8"
				android:ellipsize="end"
				android:fontFamily="@font/application_font_family"
				android:maxLines="2"
				android:text="@string/text_go_to_tasks_tab_to_see_progress"
				android:textColor="@color/color_text_secondary"
				android:textSize="@dimen/small_text_size" />

		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>