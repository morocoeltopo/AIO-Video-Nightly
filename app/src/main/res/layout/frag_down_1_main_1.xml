<?xml version="1.0" encoding="utf-8"?>
<!-- Main fragment container layout with action bar and view pager -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/transparent"
	android:orientation="vertical"
	tools:ignore="UseCompatTextViewDrawableXml,UseAppTint">

	<!-- Top action bar with navigation and action buttons -->
	<androidx.cardview.widget.CardView
		android:id="@+id/top_actionbar_section"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_50"
		android:layout_marginStart="@dimen/_10"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_10"
		android:layout_marginBottom="@dimen/_5"
		app:cardBackgroundColor="@color/color_actionbar_title_bg"
		app:cardCornerRadius="@dimen/_10">

		<RelativeLayout
			android:id="@+id/container_actionbar_top"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<!-- Back button for navigation -->
			<RelativeLayout
				android:id="@+id/btn_actionbar_back"
				android:layout_width="@dimen/_50"
				android:layout_height="match_parent"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				tools:ignore="SpeakableTextPresentCheck">

				<ImageView
					android:id="@+id/btn_left_actionbar_img"
					android:layout_width="@dimen/_30"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:adjustViewBounds="true"
					android:importantForAccessibility="no"
					android:src="@drawable/ic_button_actionbar_back"
					android:tint="@color/color_secondary"
					tools:ignore="ImageContrastCheck" />
			</RelativeLayout>

			<!-- Current fragment title display -->
			<TextView
				android:id="@+id/txt_current_frag_name"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_0"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_0"
				android:layout_toStartOf="@id/btn_actionbar_search"
				android:layout_toEndOf="@id/btn_actionbar_back"
				android:ellipsize="end"
				android:fontFamily="@font/application_font_family"
				android:gravity="center_vertical"
				android:maxLines="1"
				android:text="@string/title_downloads_manager"
				android:textSize="@dimen/title_text_size"
				android:textFontWeight="600"/>

			<!-- Search button (initially hidden) -->
			<RelativeLayout
				android:id="@+id/btn_actionbar_search"
				android:layout_width="@dimen/_50"
				android:layout_height="match_parent"
				android:layout_toStartOf="@+id/btn_actionbar_add_download"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:visibility="gone"
				tools:ignore="SpeakableTextPresentCheck">

				<ImageView
					android:id="@+id/btn_middle_actionbar_img"
					android:layout_width="@dimen/_30"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:adjustViewBounds="true"
					android:importantForAccessibility="no"
					android:src="@drawable/ic_button_actionbar_search"
					android:tint="@color/color_secondary"
					tools:ignore="ImageContrastCheck" />
			</RelativeLayout>

			<!-- Add new download button -->
			<RelativeLayout
				android:id="@+id/btn_actionbar_add_download"
				android:layout_width="@dimen/_50"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				tools:ignore="SpeakableTextPresentCheck">

				<ImageView
					android:id="@+id/btn_right_actionbar_img"
					android:layout_width="@dimen/_30"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:adjustViewBounds="true"
					android:importantForAccessibility="no"
					android:src="@drawable/ic_button_actionbar_plus"
					android:tint="@color/color_secondary"
					tools:ignore="ImageContrastCheck" />
			</RelativeLayout>

		</RelativeLayout>
	</androidx.cardview.widget.CardView>

	<!-- Container for the view pager that holds different fragments -->
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<!-- Non-swappable view pager for fragment navigation -->
		<lib.ui.builders.NonSwappableViewPager
			android:id="@+id/fragment_viewpager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentTop="true"
			android:background="@color/transparent"
			tools:ignore="SpeakableTextPresentCheck" />
	</RelativeLayout>
</LinearLayout>