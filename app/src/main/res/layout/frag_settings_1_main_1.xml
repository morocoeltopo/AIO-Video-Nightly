			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_15"
			android:layout_marginTop="@dimen/_10"
			android:layout_marginEnd="@dimen/_15"
			android:layout_marginBottom="@dimen/_0"
			android:orientation="vertical"
			app:cardBackgroundColor="@color/color_background"
			app:cardCornerRadius="@dimen/_10">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<!-- Avatar + Username Row -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginBottom="@dimen/_5"
					android:background="@color/color_surface"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<!-- User Avatar -->
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/img_user_avatar"
						android:layout_width="@dimen/_50"
						android:layout_height="@dimen/_50"
						android:layout_marginStart="@dimen/_10"
						android:layout_marginTop="@dimen/_2"
						android:layout_marginEnd="@dimen/_10"
						android:layout_marginBottom="@dimen/_2"
						android:src="@drawable/image_default_avatar" />

					<LinearLayout
						android:id="@+id/btn_user_info"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/ic_button_negative_selector"
						android:clickable="true"
						android:orientation="vertical">

						<!-- Username -->
						<TextView
							android:id="@+id/txt_user_name"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginEnd="@dimen/_10"
							android:drawableEnd="@drawable/ic_button_edit_text"
							android:drawableTint="@color/color_secondary"
							android:fontFamily="@font/application_font_family"
							android:paddingStart="@dimen/_5"
							android:paddingTop="@dimen/_5"
							android:paddingEnd="@dimen/_5"
							android:paddingBottom="@dimen/_0"
							android:text="@string/title_sample_username"
							android:textColor="@color/color_text_primary"
							android:textSize="@dimen/normal_text_size"
							android:textStyle="bold"
							tools:ignore="TouchTargetSizeCheck" />

						<!-- Email -->
						<TextView
							android:id="@+id/txt_user_email"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginEnd="@dimen/_10"
							android:fontFamily="@font/application_font_family"
							android:paddingStart="@dimen/_5"
							android:paddingTop="@dimen/_0"
							android:paddingEnd="@dimen/_5"
							android:paddingBottom="@dimen/_5"
							android:text="@string/text_sample_email"
							android:textColor="@color/color_text_primary"
							android:textSize="@dimen/smaller_text_size"
							tools:ignore="TouchTargetSizeCheck" />
					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<TextView
						android:id="@+id/txt_suggest_for_sign_up"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginStart="@dimen/_15"
						android:layout_marginTop="@dimen/_8"
						android:layout_marginEnd="@dimen/_15"
