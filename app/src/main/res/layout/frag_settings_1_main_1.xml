<?xml version="1.0" encoding="utf-8"?><!-- Settings screen layout with multiple sections for user preferences -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/transparent"
	android:orientation="vertical"
	tools:ignore="UseCompatTextViewDrawableXml,UseAppTint,TooManyViews">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<!-- User profile information section -->
		<androidx.cardview.widget.CardView
			android:id="@+id/container_user_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_15"
			android:layout_marginTop="@dimen/_10"
			android:layout_marginEnd="@dimen/_15"
			android:layout_marginBottom="@dimen/_0"
			android:orientation="vertical"
			app:cardBackgroundColor="@color/color_background"
			app:cardCornerRadius="@dimen/_10">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<!-- User avatar and basic info row -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<!-- Circular user avatar image -->
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/img_user_avatar"
						android:layout_width="@dimen/_50"
						android:layout_height="@dimen/_50"
						android:layout_marginStart="@dimen/_10"
						android:layout_marginTop="@dimen/_2"
						android:layout_marginEnd="@dimen/_10"
						android:layout_marginBottom="@dimen/_2"
						android:src="@drawable/image_default_avatar" />

					<!-- User name and email info container -->
					<LinearLayout
						android:id="@+id/btn_user_info"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/_2"
						android:layout_marginEnd="@dimen/_5"
						android:background="@drawable/ic_button_negative_selector"
						android:clickable="true"
						android:orientation="vertical"
						tools:ignore="TouchTargetSizeCheck">

						<!-- User name with edit icon -->
						<TextView
							android:id="@+id/txt_user_name"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/_5"
							android:layout_marginTop="@dimen/_5"
							android:layout_marginEnd="@dimen/_10"
							android:drawableEnd="@drawable/ic_button_edit_text"
							android:drawablePadding="@dimen/_5"
							android:drawableTint="@color/color_secondary"
							android:fontFamily="@font/application_font_family"
							android:gravity="center_vertical"
							android:text="@string/title_sample_username"
							android:textColor="@color/color_text_primary"
							android:textSize="@dimen/normal_text_size"
							android:textStyle="bold"
							tools:ignore="TouchTargetSizeCheck" />

						<!-- User email address -->
						<TextView
							android:id="@+id/txt_user_email"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/_5"
							android:layout_marginEnd="@dimen/_10"
							android:layout_marginBottom="@dimen/_5"
							android:fontFamily="@font/application_font_family"
							android:text="@string/text_sample_email"
							android:textColor="@color/color_text_secondary"
							android:textSize="@dimen/small_text_size"
							tools:ignore="TouchTargetSizeCheck" />
					</LinearLayout>

				</LinearLayout>

				<!-- Divider line -->
				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/_1"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_5"
					android:layout_marginBottom="@dimen/_0"
					android:background="@color/transparent_dark" />

				<!-- Cloud connection section -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<!-- Cloud service suggestion text -->
					<TextView
						android:id="@+id/txt_suggest_for_sign_up"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginStart="@dimen/_15"
						android:layout_marginTop="@dimen/_8"
						android:layout_marginEnd="@dimen/_15"
						android:autoLink="web"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:text="@string/text_connect_with_aio_cloud"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/message_text_size" />

					<!-- YouTube connection button -->
					<RelativeLayout
						android:id="@+id/btn_login_register_to_cloud"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_10"
						android:layout_marginTop="@dimen/_8"
						android:layout_marginEnd="@dimen/_10"
						android:layout_marginBottom="@dimen/_8"
						android:background="@drawable/ic_button_selector_secondary"
						android:clickable="true"
						android:elevation="@dimen/_2"
						tools:ignore="TouchTargetSizeCheck">

						<!-- Sign in/register button text -->
						<TextView
							android:id="@+id/txt_connect_to_youtube"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerInParent="true"
							android:layout_margin="@dimen/_7"
							android:drawableStart="@drawable/ic_button_connect"
							android:drawablePadding="@dimen/_5"
							android:drawableTint="@color/color_background"
							android:fontFamily="@font/application_font_family"
							android:gravity="center"
							android:text="@string/title_sign_in_register"
							android:textColor="@color/color_on_secondary"
							android:textSize="@dimen/normal_text_size"
							android:textStyle="bold" />
					</RelativeLayout>
				</LinearLayout>

			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<!-- Application general settings section -->
		<androidx.cardview.widget.CardView
			android:id="@+id/container_application_settings"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_15"
			android:layout_marginTop="@dimen/_10"
			android:layout_marginEnd="@dimen/_15"
			android:layout_marginBottom="@dimen/_0"
			android:orientation="vertical"
			app:cardBackgroundColor="@color/color_background"
			app:cardCornerRadius="@dimen/_10">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<!-- Settings section header -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/color_surface"
					android:orientation="vertical">

					<TextView
						android:id="@+id/txt_application_settings"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_10"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:maxLines="1"
						android:text="@string/title_application_settings"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size"
						android:textStyle="bold" />
				</LinearLayout>

				<!-- Download location setting button -->
				<LinearLayout
					android:id="@+id/btn_default_download_location"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_10"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_default_download_location"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_folder"
						android:drawableEnd="@drawable/ic_button_open_small"
						android:drawablePadding="@dimen/_7"
						android:drawableTint="@color/color_secondary"
						android:fontFamily="@font/application_font_family"
						android:text="@string/title_download_location"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

				<!-- Language picker setting button -->
				<LinearLayout
					android:id="@+id/btn_language_picker"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_language_picker"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_language"
						android:drawableEnd="@drawable/ic_button_open_small"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_secondary"
						android:fontFamily="@font/application_font_family"
						android:text="@string/title_application_language"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

				<!-- Dark mode user setting button -->
				<LinearLayout
					android:id="@+id/btn_dark_mode_ui"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_dark_mode_ui"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_dark_mode"
						android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_secondary"
						android:fontFamily="@font/application_font_family"
						android:text="@string/title_enable_dark_mode"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

				<!-- Divider line -->
				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/_1"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_5"
					android:layout_marginEnd="@dimen/_5"
					android:layout_marginBottom="@dimen/_5"
					android:background="@color/transparent_dark" />

				<!-- Content location setting button -->
				<LinearLayout
					android:id="@+id/btn_content_location"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_content_location"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_content"
						android:drawableEnd="@drawable/ic_button_open_small"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_secondary"
						android:fontFamily="@font/application_font_family"
						android:text="@string/title_preferred_content_region"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

				<!-- Daily suggestions toggle button -->
				<LinearLayout
					android:id="@+id/btn_daily_suggestions"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_10"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_daily_suggestions"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_notifications"
						android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_secondary"
						android:fontFamily="@font/application_font_family"
						android:text="@string/title_enable_daily_suggestions"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<!-- Download-specific settings section -->
		<androidx.cardview.widget.CardView
			android:id="@+id/container_download_settings"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_15"
			android:layout_marginTop="@dimen/_10"
			android:layout_marginEnd="@dimen/_15"
			android:layout_marginBottom="@dimen/_0"
			android:orientation="vertical"
			app:cardBackgroundColor="@color/color_background"
			app:cardCornerRadius="@dimen/_10">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<!-- Download settings header -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/color_surface"
					android:orientation="vertical">

					<TextView
						android:id="@+id/txt_download_settings"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_10"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:maxLines="1"
						android:text="@string/title_download_settings"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size"
						android:textStyle="bold" />
				</LinearLayout>

				<!-- Default download folder setting -->
				<LinearLayout
					android:id="@+id/btn_default_download_folder"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_10"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_default_download_folder"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_folder"
						android:drawableEnd="@drawable/ic_button_open_small"
						android:drawablePadding="@dimen/_7"
						android:drawableTint="@color/color_secondary"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:maxLines="1"
						android:text="@string/title_default_download_folder"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

				<!-- Hide task notifications toggle -->
				<LinearLayout
					android:id="@+id/btn_hide_task_notifications"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_hide_task_notifications"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_notifications"
						android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_secondary"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:maxLines="1"
						android:text="@string/title_hide_task_notifications"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

				<!-- WiFi only downloads toggle -->
				<LinearLayout
					android:id="@+id/btn_wifi_only_downloads"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_wifi_only_downloads"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_wifi_signal"
						android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_secondary"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:maxLines="1"
						android:text="@string/title_wifi_only_download"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

				<!-- Single click open download file -->
				<LinearLayout
					android:id="@+id/btn_single_click_open"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_single_click_open"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_single_click"
						android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_secondary"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:maxLines="1"
						android:text="@string/title_single_click_open"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

				<!-- Play notification sound toggle -->
				<LinearLayout
					android:id="@+id/btn_play_notification_sound"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_play_notification_sound"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_audio"
						android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_secondary"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:maxLines="1"
						android:text="@string/title_play_notification_sound"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size"
						tools:ignore="TextContrastCheck" />
				</LinearLayout>

				<!-- Divider line -->
				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/_1"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_5"
					android:layout_marginEnd="@dimen/_5"
					android:layout_marginBottom="@dimen/_5"
					android:background="@color/transparent_dark" />

				<!-- Advanced download settings button -->
				<LinearLayout
					android:id="@+id/btn_adv_downloads_settings"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_10"
					android:background="@drawable/ic_button_negative_selector"
					android:clickable="true"
					android:orientation="vertical"
					tools:ignore="TouchTargetSizeCheck">

					<TextView
						android:id="@+id/txt_adv_downloads_settings"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_8"
						android:drawableStart="@drawable/ic_button_settings"
						android:drawableEnd="@drawable/ic_button_open_small"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_secondary"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:maxLines="1"
						android:text="@string/title_other_advance_settings"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size" />
				</LinearLayout>

			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<!-- Browser settings section -->
		<androidx.cardview.widget.CardView
			android:id="@+id/container_browser_settings"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_15"
			android:layout_marginTop="@dimen/_10"
			android:layout_marginEnd="@dimen/_15"
			android:layout_marginBottom="@dimen/_0"
			android:orientation="vertical"
			app:cardBackgroundColor="@color/color_background"
			app:cardCornerRadius="@dimen/_10">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<!-- Browser settings header -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/color_surface"
					android:orientation="vertical">

					<TextView
						android:id="@+id/txt_browser_settings"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="@dimen/_10"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:maxLines="1"
						android:text="@string/title_browser_settings"
						android:textColor="@color/color_text_primary"
						android:textSize="@dimen/normal_text_size"
						android:textStyle="bold" />
				</LinearLayout>

				<!-- Browser homepage setting -->
				<LinearLayout
					android:id="@+id/btn_browser_homepage"
