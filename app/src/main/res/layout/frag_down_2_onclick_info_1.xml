<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog layout for displaying download information with scrollable text -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml,UselessParent">

	<!-- Main card container with rounded corners and shadow -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_background"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_5">

		<!-- Vertical layout for organizing dialog content -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Header section with surface background -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_surface"
				android:orientation="vertical">

				<!-- Dialog title for download information -->
				<TextView
					android:id="@+id/txt_dialog_title"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_10"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center"
					android:maxLines="1"
					android:text="@string/title_download_information"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					android:textStyle="bold" />
			</LinearLayout>

			<!-- Scrollable area for detailed download information -->
			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_10"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_8"
				android:layout_weight="1">

				<!-- Download information text (selectable for copying) -->
				<TextView
					android:id="@+id/txt_dialog_message"
					style="@style/style_dialog.message"
					android:layout_marginStart="@dimen/_10"
					android:layout_marginTop="@dimen/_0"
					android:layout_marginEnd="@dimen/_10"
					android:layout_marginBottom="@dimen/_0"
					android:gravity="start"
					android:text="@string/title_message_goes_here"
					android:textIsSelectable="true"
					android:textSize="@dimen/message_text_size" />
			</ScrollView>

			<!-- Button container at bottom -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/_5"
				android:baselineAligned="true"
				android:orientation="horizontal">

				<!-- OK confirmation button -->
				<RelativeLayout
					android:id="@+id/btn_dialog_positive_container"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_15"
					android:layout_marginTop="@dimen/_5"
					android:layout_marginEnd="@dimen/_15"
					android:layout_marginBottom="@dimen/_5"
					android:layout_weight="1"
					android:background="@drawable/ic_button_selector_secondary"
					android:clickable="true"
					android:elevation="@dimen/_2"
					tools:ignore="TouchTargetSizeCheck">

					<!-- OK button with checkmark icon -->
					<TextView
						android:id="@+id/btn_dialog_positive"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_margin="@dimen/_7"
						android:drawableStart="@drawable/ic_button_checked_circle"
						android:drawablePadding="@dimen/_5"
						android:drawableTint="@color/color_background"
						android:ellipsize="end"
						android:fontFamily="@font/application_font_family"
						android:gravity="center"
						android:maxLines="1"
						android:text="@string/title_okay"
						android:textColor="@color/color_on_secondary"
						android:textSize="@dimen/normal_text_size"
						android:textStyle="bold" />
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>