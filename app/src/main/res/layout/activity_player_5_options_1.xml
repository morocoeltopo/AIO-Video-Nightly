<?xml version="1.0" encoding="utf-8"?>
<!-- =========================================================================
     Media Options Dialog Layout
     Defines a popup dialog for media-related actions such as delete, convert,
     open externally, snapshot, and more. Each option is represented by a
     clickable LinearLayout inside a CardView for clean visual grouping.
     ========================================================================= -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/style_dialog"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

	<!-- ============================================================
		 CARD CONTAINER
		 Provides elevation, rounded corners, and consistent dialog
		 background for all media action items.
		 ============================================================ -->
	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="@dimen/_5"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_5"
		android:layout_marginBottom="@dimen/_10"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10"
		app:cardElevation="@dimen/_2">

		<!-- ======================================================
			 ROOT LAYOUT
			 Holds all media option buttons stacked vertically.
			 ====================================================== -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- ==================================================
				 TITLE BAR
				 Displays dialog title on a colored background.
				 ================================================== -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/_35"
				android:background="@color/color_cardview_title_bg"
				android:orientation="horizontal"
				android:visibility="visible">

				<TextView
					style="@style/style_dialog.title"
					android:layout_gravity="center"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_media_options"
					android:textColor="@color/color_text_primary"
					android:textFontWeight="600"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 DELETE FILE OPTION
				 Deletes the current media file from storage.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_delete_file"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_10"
				android:layout_marginEnd="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_delete_v2"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_delete_from_disk"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 CONVERT TO AUDIO OPTION
				 Converts the current video file into an audio file.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_convert_to_audio"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_sound"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_convert_to_audio"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 OPEN EXTERNALLY OPTION
				 Opens the media file using an external application.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_open_in_another"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_player"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_open_externally"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 DISCOVER VIDEO OPTION
				 Opens the video source or related website.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_discover_video"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				android:visibility="visible"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_open_v2"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_open_video_site"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 PRIVATE VIDEOS OPTION
				 Toggles visibility of private video playback.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_private_videos"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				android:visibility="visible"
				tools:ignore="TouchTargetSizeCheck">

				<CheckBox
					android:id="@+id/checkbox_private_videos"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/_8"
					android:background="@drawable/ic_button_negative_selector"
					android:button="@null"
					android:clickable="false"
					android:drawableStart="@drawable/ic_button_radio_selector"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center_vertical"
					android:maxLines="1"
					android:text="@string/title_private_videos"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size"
					tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />
			</LinearLayout>

			<!-- ==================================================
				 SNAPSHOT OPTION
				 Captures a video frame as an image snapshot.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_snapshot"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				android:visibility="visible"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_camera_shutter"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_frame_snapshot"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 SHARE MEDIA OPTION
				 Shares the current media file via other apps.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_share_media"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_share_v1"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_share_media_file"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

			<!-- ==================================================
				 MEDIA INFO OPTION
				 Displays metadata and technical info of the file.
				 ================================================== -->
			<LinearLayout
				android:id="@+id/btn_media_info"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/_10"
				android:layout_marginBottom="@dimen/_10"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/_8"
					android:drawableStart="@drawable/ic_button_information"
					android:drawableEnd="@drawable/ic_button_open_small"
					android:drawablePadding="@dimen/_5"
					android:drawableTint="@color/color_secondary"
					android:fontFamily="@font/application_font_family"
					android:text="@string/title_file_information"
					android:textColor="@color/color_text_primary"
					android:textSize="@dimen/normal_text_size" />
			</LinearLayout>

		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>