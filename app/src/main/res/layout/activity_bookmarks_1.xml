<?xml version="1.0" encoding="utf-8"?><!-- Main container for Bookmarks Activity with gradient background -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/ic_background_gradient"
	android:orientation="vertical"
	tools:context="app.ui.main.fragments.browser.activities.BookmarksActivity"
	tools:ignore="UseCompatTextViewDrawableXml,UseAppTint,VisualLintBounds">

	<!-- Top action bar with navigation and action buttons -->
	<androidx.cardview.widget.CardView
		android:id="@+id/top_actionbar_section"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_50"
		android:layout_alignParentTop="true"
		android:layout_marginStart="@dimen/_10"
		android:layout_marginTop="@dimen/_10"
		android:layout_marginEnd="@dimen/_10"
		android:layout_marginBottom="@dimen/_0"
		app:cardBackgroundColor="@color/color_actionbar_title_bg"
		app:cardCornerRadius="@dimen/_10">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<!-- Back button -->
			<RelativeLayout
				android:id="@+id/btn_left_actionbar"
				android:layout_width="@dimen/_50"
				android:layout_height="match_parent"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				tools:ignore="SpeakableTextPresentCheck">

				<ImageView
					android:id="@+id/btn_left_actionbar_img"
					android:layout_width="@dimen/_30"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:adjustViewBounds="true"
					android:importantForAccessibility="no"
					android:src="@drawable/ic_button_actionbar_back"
					android:tint="@color/color_secondary"
					tools:ignore="ImageContrastCheck" />
			</RelativeLayout>

			<!-- Screen title -->
			<TextView
				android:id="@+id/txt_actionbar"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_0"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_0"
				android:layout_toStartOf="@id/btn_actionbar_search"
				android:layout_toEndOf="@id/btn_left_actionbar"
				android:ellipsize="end"
				android:fontFamily="@font/application_font_family"
				android:gravity="center_vertical"
				android:maxLines="1"
				android:text="@string/title_bookmarks"
				android:textSize="@dimen/title_text_size"
				android:textFontWeight="600" />

			<!-- Search button -->
			<RelativeLayout
				android:id="@+id/btn_actionbar_search"
				android:layout_width="@dimen/_50"
				android:layout_height="match_parent"
				android:layout_toStartOf="@id/btn_right_actionbar"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				tools:ignore="SpeakableTextPresentCheck">

				<ImageView
					android:id="@+id/btn_actionbar_search_img"
					android:layout_width="@dimen/_30"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:adjustViewBounds="true"
					android:importantForAccessibility="no"
					android:src="@drawable/ic_button_actionbar_search"
					android:tint="@color/color_secondary"
					tools:ignore="ImageContrastCheck" />
			</RelativeLayout>

			<!-- Clear/action button -->
			<RelativeLayout
				android:id="@+id/btn_right_actionbar"
				android:layout_width="@dimen/_50"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:background="@drawable/ic_button_negative_selector"
				android:clickable="true"
				tools:ignore="SpeakableTextPresentCheck">

				<ImageView
					android:id="@+id/btn_right_actionbar_img"
					android:layout_width="@dimen/_30"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:adjustViewBounds="true"
					android:importantForAccessibility="no"
					android:src="@drawable/ic_button_clear"
					android:tint="@color/color_secondary"
					tools:ignore="ImageContrastCheck" />
			</RelativeLayout>
		</RelativeLayout>
	</androidx.cardview.widget.CardView>

	<!-- Search bar container (initially hidden) -->
	<androidx.cardview.widget.CardView
		android:id="@+id/top_searchbar_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/top_actionbar_section"
		android:layout_marginStart="@dimen/_10"
		android:layout_marginTop="@dimen/_8"
		android:layout_marginEnd="@dimen/_10"
		android:layout_marginBottom="@dimen/_0"
		android:orientation="vertical"
		android:visibility="gone"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginStart="@dimen/_5"
			android:layout_marginTop="@dimen/_5"
			android:layout_marginEnd="@dimen/_5"
			android:layout_marginBottom="@dimen/_5"
			android:orientation="vertical">

			<!-- Search input field -->
			<LinearLayout
				android:id="@+id/edit_search_keywords_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginStart="@dimen/_0"
				android:layout_marginTop="@dimen/_0"
				android:layout_marginEnd="@dimen/_0"
				android:layout_marginBottom="@dimen/_0"
				android:background="@drawable/rounded_surface_color"
				android:clickable="true"
				android:orientation="vertical"
				tools:ignore="TouchTargetSizeCheck,UselessParent">

				<EditText
					android:id="@+id/edit_search_keywords_text"
					style="@style/style_dialog.message"
					android:layout_margin="@dimen/_8"
					android:background="@color/transparent"
					android:ellipsize="end"
					android:fontFamily="@font/application_font_family"
					android:gravity="center_vertical"
					android:hint="@string/text_search_something"
					android:importantForAutofill="no"
					android:inputType="textUri"
					android:maxLines="1"
					android:singleLine="true"
					android:textColor="@color/color_on_surface"
					android:textColorHint="@color/color_text_hint"
					android:textSize="@dimen/normal_text_size"
					tools:ignore="VisualLintTextFieldSize,TextContrastCheck,TouchTargetSizeCheck" />
			</LinearLayout>
		</RelativeLayout>
	</androidx.cardview.widget.CardView>

	<!-- Empty state indicator when no bookmarks -->
	<androidx.cardview.widget.CardView
		android:id="@+id/empty_bookmarks_indicator"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:layout_marginStart="@dimen/_10"
		android:layout_marginTop="@dimen/_0"
		android:layout_marginEnd="@dimen/_10"
		android:layout_marginBottom="@dimen/_0"
		android:orientation="vertical"
		android:visibility="visible"
		app:cardBackgroundColor="@color/color_cardview_bg"
		app:cardCornerRadius="@dimen/_10">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			tools:ignore="UseCompoundDrawables">

			<!-- Empty state illustration -->
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="@dimen/_10"
				android:adjustViewBounds="true"
				android:hardwareAccelerated="true"
				android:importantForAccessibility="no"
				android:src="@drawable/image_empty_box" />

			<!-- Empty state message -->
			<TextView
				android:id="@+id/txt_empty_bookmark_indicator"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginStart="@dimen/_10"
				android:layout_marginTop="@dimen/_10"
				android:layout_marginEnd="@dimen/_10"
				android:layout_marginBottom="@dimen/_10"
				android:fontFamily="@font/application_font_family"
				android:gravity="center"
				android:text="@string/title_your_bookmark_collection_empty"
				android:textColor="@color/color_text_primary"
				android:textFontWeight="600"
				android:textSize="@dimen/message_text_size" />
		</LinearLayout>
	</androidx.cardview.widget.CardView>

	<!-- Main bookmarks list view -->
	<ListView
		android:id="@+id/list_bookmarks"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/bottom_container_load_more"
		android:layout_below="@+id/top_searchbar_container"
		android:layout_marginStart="@dimen/_0"
		android:layout_marginTop="@dimen/_8"
		android:layout_marginEnd="@dimen/_0"
		android:layout_marginBottom="@dimen/_8"
		android:divider="@color/transparent"
		android:visibility="visible" />

	<!-- Load more button at bottom -->
	<LinearLayout
		android:id="@+id/bottom_container_load_more"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:orientation="vertical">

		<!-- Load more bookmarks button -->
		<RelativeLayout
			android:id="@+id/btn_load_more_bookmarks"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_10"
			android:layout_marginTop="@dimen/_0"
			android:layout_marginEnd="@dimen/_10"
			android:layout_marginBottom="@dimen/_10"
			android:background="@drawable/ic_button_selector_secondary"
			android:clickable="true"
			android:elevation="@dimen/_2"
			tools:ignore="UselessParent,TouchTargetSizeCheck">

			<TextView
				android:id="@+id/btn_dialog_positive"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_margin="@dimen/_7"
				android:drawableStart="@drawable/ic_button_add_plus"
				android:drawablePadding="@dimen/_5"
				android:drawableTint="@color/color_on_secondary"
				android:fontFamily="@font/application_font_family"
				android:gravity="center"
				android:text="@string/title_load_more_browser_bookmarks"
				android:textColor="@color/color_on_secondary"
				android:textSize="@dimen/normal_text_size"
				android:textFontWeight="600"
				tools:ignore="TextContrastCheck" />
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>