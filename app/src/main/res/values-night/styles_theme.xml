<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Primary colors -->
	<color name="color_primary">#1A1A1A</color>
	<color name="color_primary_dark">#121212</color>
	<color name="color_primary_variant">#2E2E2E</color>
	<color name="color_on_primary">#FFFFFF</color>

	<!-- Secondary colors -->
	<color name="color_secondary">#FF9800</color>
	<color name="color_secondary_variant">#F57C00</color>
	<color name="color_on_secondary">#000000</color>

	<!-- Background and surfaces -->
	<color name="color_background">@color/color_primary_variant</color>
	<color name="color_surface">@color/color_primary</color>
	<color name="color_on_background">#E0E0E0</color>
	<color name="color_on_surface">#BDBDBD</color>
	<color name="color_cardview_drawable_tint">@color/color_secondary</color>

	<!-- Navigation and action bars -->
	<color name="color_action_bar_bg">#1E1E1E</color>
	<color name="color_navigation_bar_bg">@color/color_action_bar_bg</color>

	<!-- Text colors -->
	<color name="color_text_primary">#E0E0E0</color>
	<color name="color_text_secondary">#BDBDBD</color>
	<color name="color_text_hint">#757575</color>
	<color name="color_text_subheading">#9E9E9E</color>

	<!-- Accent colors -->
	<color name="color_deep_blue">#0D47A1</color>
	<color name="color_yellow_accent">#FFC107</color>
	<color name="color_yellow_accent_variant">#FFB300</color>
	<color name="color_green">#4CAF50</color>
	<color name="color_green_lite">#388E3C</color>

	<!-- Error colors -->
	<color name="color_error">#F05A5A</color>
	<color name="color_error_dark">#B00020</color>
	<color name="color_on_error">#000000</color>

	<!-- Transparent overlays -->
	<color name="transparent_white">#80FFFFFF</color>
	<color name="transparent">#00000000</color>
	<color name="transparent_dark">#0AFFFFFF</color>
	<color name="transparent_darker">#4F000000</color>

	<!-- Borders and other shades -->
	<color name="color_border_gray">#4A4A4A</color>
	<color name="color_pure_black">#000000</color>
	<color name="color_black_light">#33000000</color>
	<color name="color_black_light_secondary">#55000000</color>
	<color name="color_black_lighter">#88000000</color>
	<color name="color_black_deep_lighter">#CC000000</color>

	<!-- Application theme -->
	<style name="style.application" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="android:statusBarColor">@color/color_surface</item>
		<item name="android:navigationBarColor">@color/color_surface</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:windowLightNavigationBar">false</item>
		<item name="android:windowBackground">@color/color_surface</item>
		<item name="android:windowActivityTransitions">false</item>
		<item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowTranslucentNavigation">false</item>
		<item name="android:fitsSystemWindows">true</item>
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_variant</item>
		<item name="colorError">@color/color_error</item>
		<item name="colorAccent">@color/color_secondary</item>
		<item name="android:layoutDirection">ltr</item>
		<item name="android:textColorPrimary">@color/color_text_primary</item>
		<item name="android:textColorSecondary">@color/color_text_secondary</item>
		<item name="android:textColorHint">@color/color_text_hint</item>
		<item name="android:textColor">@color/color_text_primary</item>
		<item name="android:textColorLink">@color/color_secondary</item>
		<item name="android:fontFamily">@font/application_font_family</item>
		<item name="android:textViewStyle">@style/style_padding_textview_style</item>
		<item name="android:checkboxStyle">@style/style_padding_textview_style</item>
		<item name="android:switchStyle">@style/style_padding_textview_style</item>
	</style>

	<style name="style.application.video_player_activity" parent="style.application">
		<item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:fitsSystemWindows">false</item>
	</style>

	<style name="style.application.opening_activity" parent="style.application">
		<item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:fitsSystemWindows">false</item>
	</style>

	<style name="style.transparent_activity" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="android:statusBarColor">@color/color_surface</item>
		<item name="android:navigationBarColor">@color/color_surface</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:windowLightNavigationBar">false</item>
		<item name="android:windowActivityTransitions">false</item>
		<item name="android:windowBackground">@color/transparent</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowActionBarOverlay">false</item>
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:fitsSystemWindows">true</item>
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_variant</item>
		<item name="colorError">@color/color_error</item>
		<item name="colorAccent">@color/color_secondary</item>
		<item name="android:textColorPrimary">@color/color_text_primary</item>
		<item name="android:textColorSecondary">@color/color_text_secondary</item>
		<item name="android:textColorHint">@color/color_text_hint</item>
		<item name="android:textColor">@color/color_text_primary</item>
		<item name="android:textColorLink">@color/color_secondary</item>
		<item name="android:fontFamily">@font/application_font_family</item>
		<item name="android:textViewStyle">@style/style_padding_textview_style</item>
		<item name="android:checkboxStyle">@style/style_padding_textview_style</item>
		<item name="android:switchStyle">@style/style_padding_textview_style</item>
	</style>

	<style name="style_webview_loading" parent="android:Widget.ProgressBar.Horizontal">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/ic_webview_progress</item>
		<item name="android:minHeight">@dimen/_4</item>
	</style>

	<style name="style_padding_textview_style">
		<item name="android:includeFontPadding">false</item>
		<item name="android:lineSpacingMultiplier">0.9</item>
	</style>
</resources>
